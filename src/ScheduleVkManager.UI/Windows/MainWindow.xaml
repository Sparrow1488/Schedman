<Window
    x:Class="ScheduleVkManager.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ScheduleVkManager.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ScheduleVkManager.UI.ViewModels"
    xmlns:views="clr-namespace:ScheduleVkManager.UI.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    MinWidth="650"
    MinHeight="350"
    mc:Ignorable="d">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
                <views:MainView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:StartupViewModel}">
                <views:StartupView />
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
